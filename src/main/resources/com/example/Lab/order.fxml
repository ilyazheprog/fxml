<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="384.0" prefWidth="327.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Lab.OrderController">
    <Label text="Dish" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <Label text="Quantity" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <Label text="Price" GridPane.rowIndex="0" GridPane.columnIndex="2" />

    <!-- Блюдо 1 -->
    <CheckBox fx:id="dish1Check" text="Pizza" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="dish1Qty" text="1" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Label text="$10" GridPane.rowIndex="1" GridPane.columnIndex="2" />

    <!-- Блюдо 2 -->
    <CheckBox fx:id="dish2Check" text="Pasta" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="dish2Qty" text="1" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    <Label text="$8" GridPane.rowIndex="2" GridPane.columnIndex="2" />

    <!-- Блюдо 3 -->
    <CheckBox fx:id="dish3Check" text="Salad" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="dish3Qty" text="1" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <Label text="$5" GridPane.rowIndex="3" GridPane.columnIndex="2" />

    <!-- Кнопка для генерации счёта -->
    <Button text="Generate Bill" onAction="#generateBill" GridPane.rowIndex="4" GridPane.columnIndex="1" />

    <!-- Поле для отображения счёта -->
    <TextArea fx:id="billArea" prefHeight="200" prefWidth="300" GridPane.rowIndex="5" GridPane.columnSpan="3" />

</GridPane>
